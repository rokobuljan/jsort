{
    "include": ["src/lib/*"],
    "compilerOptions": {
        "noEmitOnError": true,
        "rootDir": "src/lib",
        "target": "ES2020",
        "lib": ["esnext", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "moduleResolution": "node"
    }
}
